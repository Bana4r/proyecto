<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1E"
    android:padding="24dp"
    tools:context=".SelectCategoryActivity">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_revert" 
        app:tint="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/select_category_title"
        app:layout_constraintBottom_toBottomOf="@+id/select_category_title"/>

    <TextView
        android:id="@+id/select_category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una Categoría"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/streaming_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Streaming"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@android:color/white"
        app:strokeColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/select_category_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/music_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Música"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@android:color/white"
        app:strokeColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/streaming_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/games_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Juegos"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@android:color/white"
        app:strokeColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/music_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/home_services_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Servicios de Casa"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@android:color/white"
        app:strokeColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/games_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/external_service_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Servicio por Usuario Externo"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textColor="@android:color/white"
        app:strokeColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/home_services_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>